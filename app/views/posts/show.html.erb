 
<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

        <!-- Blog Post -->

        <!-- Title -->
        <h1 style="font-size: 62.5px;"><%= @post.title %></h1>

        <!-- Author -->
        <p class="lead">
            by <strong> <%= @post.user.username %></strong>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Was Posted: 
        <%= time_ago_in_words(@post.created_at) %> ago and has <%= @post.comments.count %> comments</p>

        <hr>

        <!-- Preview Image -->
        

        <hr>

        <!-- Post Content -->
        <p class="lead"><%= @post.content %></p>
       
        <hr>

        <!-- Blog Comments -->

        <!-- Comments Form -->
        <div class="well">
          
           <%= render @post.comments %>
<h4>Reply To Thread</h4>
<%= render 'comments/form' %>

        </div>

        <hr>

        <!-- Posted Comments -->

        <!-- Comment -->



    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Blog Search Well -->
        

        <!-- Blog Categories Well -->
        

        <!-- Side Widget Well -->
        <div class="well">
          <h4>Recent Posts</h4>
  
        </div>

    </div>

</div>
<% if can? :update, @post %>
<%= link_to "Edit Post", edit_post_path(@post) %>
<%= link_to "Delete Post", post_path(@post), method: :delete, 
              data: { confirm: "Are you really sure about this?" } %>
<% end %>             